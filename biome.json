{
  "$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
  "organizeImports": {
    "enabled": false
  },
  "formatter": {
    "enabled": true,
    "lineWidth": 130,
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "off",
        "noConfusingVoidType": "warn"
      },
      "correctness": {
        "noUnusedVariables": "warn",
        "noUndeclaredVariables": "off",
        "useExhaustiveDependencies": "off",
        "all": true
      }
    }
  }
}
